// carousel begins from here
#carouselBottom.container-fluid
  #carouselExampleCaptions.carousel.slide(data-bs-ride='false')
    .carousel-indicators
      button.active(type='button' data-bs-target='#carouselExampleCaptions' data-bs-slide-to='0' aria-current='true' aria-label='Slide 1')
      button(type='button' data-bs-target='#carouselExampleCaptions' data-bs-slide-to='1' aria-label='Slide 2')
      button(type='button' data-bs-target='#carouselExampleCaptions' data-bs-slide-to='2' aria-label='Slide 3')
    .carousel-inner
      .carousel-item.active.cItem
        img.d-block.w-100.farm.slideImage(src='/Images/product2.jpg' alt='UFarm')
        .carousel-caption
          h5.captionHeader UFarm
          p.captionParagraph Welcome to UFarm, your number one online groceries market.
      .carousel-item.cItem
        img.d-block.w-100.slideImage(src='/Images/chicken3.jpg' alt='Ufarm')
        .carousel-caption
          h5.captionHeader UFarm
          p.captionParagraph
            | Make your order now and have it delivered with just a single tap on your phone.
      .carousel-item.cItem
        img.d-block.w-100.slideImage(src='/Images/freshMilk.jpg' alt='UFarm')
        .carousel-caption
          h5.captionHeader UFarm
          p.captionParagraph We&apos;ve got you sorted, hassle no more and enjoy organic food!
    button.carousel-control-prev(type='button' data-bs-target='#carouselExampleCaptions' data-bs-slide='prev')
      span.carousel-control-prev-icon(aria-hidden='true')
      span.visually-hidden Previous
    button.carousel-control-next(type='button' data-bs-target='#carouselExampleCaptions' data-bs-slide='next')
      span.carousel-control-next-icon(aria-hidden='true')
      span.visually-hidden Next
// carousel ends here
