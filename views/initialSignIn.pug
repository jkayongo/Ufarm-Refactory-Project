doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  link(rel='stylesheet' href='/CSS/Bootstrap/bootstrap-5.3.0-alpha1-dist/css/bootstrap.css')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css')
  link(rel='stylesheet' href='/CSS/Bootstrap/bootstrap-5.3.0-alpha1-dist/custom.css')
  title initial sigin
  style.
    body {
    background-image: url('/Images/bckgrdPicture.jpg');
    background-size: cover;
    background-repeat: no-repeat;
    height: 100vh;
    }
.container.d-flex.justify-content-center
  .row
    .col-6.initialsignin
      .card
        .card-header
          | SIGNIN HERE
        .card-body
          form#initialSignInForm(action='/userpages' name='ufInitialSignIN' onsubmit='return Validate(event);' method='POST')
            .form-floating.mb-3
              input#userEmail.form-control(type='email' placeholder='Enter your email')
              label(for='userEmail') Enter your email
              small#userEmailError
            .form-floating.mb-3
              input#userPassword.form-control(type='password' placeholder='Enter your password')
              label(for='userPassword') Enter your password
              small#userPasswordError
            .form-floating.mb-3
              .dropdown
                button.btn.btn-secondary.dropdown-toggle(type='button' data-bs-toggle='dropdown' aria-expanded='false')
                  | USER
                ul.dropdown-menu
                  li
                    button.dropdown-item(type='button') AGRICULTURAL OFFICER
                  li
                    button.dropdown-item(type='button') FARMER ONE
                  li
                    button.dropdown-item(type='button') URBAN FARMER
            .form-floating.mb-3
              button.btn.btn-success(type='submit') SIGNIN NOW
script(src='/CSS/Bootstrap/bootstrap-5.3.0-alpha1-dist/js/bootstrap.bundle.js')
script(src='/js/custom.js')
script(src='/validations/initialSignInValidation.js')

